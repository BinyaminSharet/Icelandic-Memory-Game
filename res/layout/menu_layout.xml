<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/iceland_flag">
	<TextView android:id="@+id/menu_title_tv"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="@string/menu_title" 
		android:layout_centerHorizontal="true" 
		android:layout_alignParentTop="true"/>
	<EditText android:id="@+id/user_name_et" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:hint="@string/user_name_hint"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/menu_title_tv"
		android:maxLines="1"/>
	<TextView android:id="@+id/results_tv"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/user_name_et"
		/>
	<Button android:id="@+id/game_list_button" 
		android:text="@string/game_selection_button_text"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" 
		/>
</RelativeLayout>
